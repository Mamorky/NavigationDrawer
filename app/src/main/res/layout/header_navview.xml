<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/height_header_drawable"
    android:orientation="vertical"
    android:background="@drawable/material_background"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="@dimen/left_padding_header">

    <!-- Imagen de perfil -->
    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/perfil"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />
    <!-- Nombre Usuario -->
        <TextView
            android:id="@+id/txv_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_name_user"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
    <!-- Correo Usuario -->
    <TextView
        android:id="@+id/txv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_user_email" />

</LinearLayout>